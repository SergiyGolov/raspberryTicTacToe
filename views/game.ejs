<!DOCTYPE html>
<html>

<head>
   <link href="toastr.css" rel="stylesheet" />  <!--  https://stackoverflow.com/questions/48248832/stylesheet-not-loaded-because-of-mime-type -->
    <script src="toastr.js"></script>
    <meta charset="utf-8" />
    <title>Tic tac toe</title>
    <style>
        html,
        table,
        tbody,
        tr,
        body {
            width: 90%;
        }

        .squared {
            width: 33%;
        }

        td {
            border: 1px solid black;
        }
    </style>
</head>

<body>
    <table id="board">

    </table>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        if (document.readyState === "loading") {
            document.addEventListener("DOMContentLoaded", init);
        } else {
            init();
        }

        function init() {
            var color = "white";

            var socket = io.connect('<%= serverAdress %>');

            var init = false;

            var board = new Array(3);

            for (var i = 0; i < board.length; i++) {
                board[i] = new Array(3);
            }


            socket.on('message', message => {
                toastr.info(message);
            });

            socket.on('playOk', move => {
                console.log("playOk");
                board[move.x][move.y].style.backgroundColor = move.color;
            });

            socket.on('setColor', message => {
                color = message;
                if (color != "white" && !init) {
                    init = true;
                    for (let i = 0; i < 3; i++) {
                        let tr = document.createElement('tr');
                        for (let j = 0; j < 3; j++) {
                            let td = document.createElement('td');
                            td.id = `${i},${j}`;
                            td.className = 'squared';
                            td.addEventListener('click', (event) => {
                                var move = {
                                    color: color,
                                    x: i,
                                    y: j
                                };
                                socket.emit('play', move);
                            });
                            board[i][j] = td;
                            tr.appendChild(td);
                        }
                        document.getElementById('board').appendChild(tr);
                    }

                    let squares = document.querySelectorAll('.squared');
                    let width = squares[0].clientWidth;

                    squares.forEach(el => {
                        el.style.height = `${width}px`;
                    });
                }
            });
        }
    </script>
</body>

</html>